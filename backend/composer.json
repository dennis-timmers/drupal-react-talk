{
    "name": "drupal-react-talk/backend",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "discard-changes": true,
        "platform": {
            "php": "7.4.999",
            "ext-curl": "7.4.999",
            "ext-gd": "7.4.999"
        }
    },
    "extra": {
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$vendor}-{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "web"
            }
        },
        "composer-exit-on-patch-failure": true
    },
    "authors": [
        {
            "name": "Jori Regter",
            "email": "joriregter@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "burst/drupal-distribution": "^3.2.6",
        "drupal/gin": "^3.0",
        "drupal/gin_login": "^1.0",
        "drupal/graphql": "^4.2",
        "platformsh/config-reader": "^2.4"
    }
}
