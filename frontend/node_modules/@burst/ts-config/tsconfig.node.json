// This is an adjusted config that can be used to transpile directly to
// Node.js-compatible JavaScript.
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Most of the times, you do want to emit.
    "noEmit": false,

    // Support only ES2017 features. Got these from lib.es2017.full.d.ts.
    "lib": ["es2017", "dom", "scripthost", "dom.iterable"],

    // Compile TS to JS.
    "target": "ES2017",
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true
  }
}
